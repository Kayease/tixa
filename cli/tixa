#!/usr/bin/env bash

set -e

BASE_DIR="/opt/tixa"
CMD="$1"

case "$CMD" in
  create)
    bash $BASE_DIR/core/create.sh
    ;;
  list)
    bash $BASE_DIR/core/list.sh
    ;;
  delete)
    bash $BASE_DIR/core/delete.sh "$2"
    ;;
  verify)
  shift
  bash /opt/tixa/cli/verify.sh "$@"
  ;;
  ssl)
  shift
  bash /opt/tixa/cli/ssl.sh "$@"
  ;;
  *)
    echo "TIXA Â· Media Service CLI"
    echo ""
    echo "Usage:"
    echo "  tixa create        Create media service"
    echo "  tixa list          List services"
    echo "  tixa delete <name> Delete service"
    ;;
esac
